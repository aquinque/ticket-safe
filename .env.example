# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Revolut Payment Configuration
# Get your API key from: https://business.revolut.com/settings/developer/api
VITE_REVOLUT_API_KEY=your_revolut_api_key_here
VITE_REVOLUT_API_BASE=https://merchant.revolut.com/api/1.0

# For sandbox/testing, use:
# VITE_REVOLUT_API_BASE=https://sandbox-merchant.revolut.com/api/1.0

# Ticket Security - CRITICAL: Keep this secret secure!
# Generate with: openssl rand -base64 32
# This key is used to sign JWT tokens for secure tickets
TICKET_SIGNING_SECRET=your_256_bit_secret_key_here

# Edge Function Secrets (Set in Supabase Dashboard)
# Navigate to: Supabase Dashboard -> Edge Functions -> Secrets
# Required secrets:
# - TICKET_SIGNING_SECRET (same as above)
# - SUPABASE_SERVICE_ROLE_KEY (from Supabase Dashboard -> Settings -> API)

# ── Import scripts (server-side / CI use only, never expose to browser) ────
# Service-role key — required for npm run import:campuslife-event
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# CampusLife / CampusGroups authentication (optional)
# If set, the import script will attempt to fetch live event details.
# Without these, it falls back to hard-coded known events or a placeholder.
CAMPUSLIFE_BASE_URL=https://campuslife.escp.eu
CAMPUSLIFE_SESSION_COOKIE=
CAMPUSLIFE_API_TOKEN=
